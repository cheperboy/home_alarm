{% extends "admin/admin.html.j2" %}

{% block content %}
      <h2>{{ current_page }}</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
					{% for section_name, section_dict in params.items(): %}
						<thead>
							<tr>
								<th colspan=2 scope="col"><b>{{ section_name }}</b></th>
							</tr>
						</thead>
						{% for key, value in section_dict.items(): %}
						<tbody>
						<tr>
							<td>{{ key }}</td>
							<td>{{ value|safe }}</td>
						</tr>
						</tbody>
						{% endfor %}
					{% endfor %}
        </table>
      </div>

{% endblock %}
