{% extends "admin/admin.html.j2" %}

{% block content %}

      <h2>{{ current_page }}</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
							<th>Date</th>
							<th>User</th>
							<th>System</th>
							<th>Subject</th>
							<th>Message</th>
            </tr>
          </thead>
          <tbody>
						{% for log in logs %}
						<tr>
							<td>{{ log.dt.strftime('%d/%m %H:%M') }}</td>
							<td>{{ log.user }}</td>
							<td>{{ log.scope }}</td>
							<td>{{ log.subject }}</td>
							<td><span class="badge badge-{{ log.badge }}">{{ log.message }}</span></td>
						</tr>
						{% endfor %}
          </tbody>
        </table>
      </div>

{% endblock %}
