{% extends "index.html.j2" %}

{% block content %}

	<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Login</h5>
            <form class="form-signin" method="POST">
							{{ form.hidden_tag() }}

							<div class="form-label-group">
								<input id="name" name="name" type="text" value="" class="form-control" placeholder="name" required autofocus > <br>
								<label for="name">Name</label>
								{% for error in form.name.errors %}{{ error }}{% endfor %}
              </div>

              <div class="form-label-group">
                <input type="password" id="password" class="form-control" name="password" placeholder="password" required>
                <label for="password">Password</label>
								{% for error in form.password.errors %}{{ error }}{% endfor %}<br>
              </div>

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <hr class="my-4">
              <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Log in</button>
              <hr class="my-4">
							<a class="btn btn-block btn-secondary text-uppercase" href="{{ url_for('nox.index') }}">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
